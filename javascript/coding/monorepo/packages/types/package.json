{
  "name": "@tester/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for the tester monorepo",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./dto": {
      "types": "./dist/dto/index.d.ts",
      "import": "./dist/dto/index.js",
      "require": "./dist/dto/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "yarn clean && tsc -b",
    "clean": "rm -rf dist .tsbuildinfo",
    "dev": "tsc -b --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "typescript",
    "types",
    "shared",
    "monorepo"
  ],
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
