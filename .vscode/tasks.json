{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Frontend",
			"type": "shell",
			"command": "yarn build",
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"options": {
				"cwd": "${workspaceFolder}/javascript/coding/monorepo/apps/frontend"
			}
		},
		{
			"label": "Build Backend",
			"type": "shell",
			"command": "yarn build",
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"options": {
				"cwd": "${workspaceFolder}/javascript/coding/monorepo/apps/backend"
			}
		},
		{
			"label": "Run E2E tests",
			"type": "shell",
			"command": "DEPLOY_ENV=dev yarn test",
			"group": "test",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"options": {
				"cwd": "${workspaceFolder}/javascript/coding/monorepo/packages/e2e"
			}
		}
	]
}